[Unit]
Description=Market Data Service
After=network.target

[Service]
WorkingDirectory=/mnt/market_data
Environment=RUST_LOG=info
User=ec2-user
Group=ec2-user
ExecStartPre=/usr/bin/install -d -o ec2-user -g ec2-user -m 0755 /mnt/market_data/data
ExecStart=/mnt/market_data/target/release/market-data
Restart=always
RestartSec=5
TimeoutStopSec=300
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
